                              Height="50"
                              Margin="5"
                              SelectionChanged="UseTypeComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding UseTypes}"/>
