                        <DockPanel Grid.Row="5">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Race: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="5" Grid.Column="1"
                              x:Name="EnemyRaceComboBox"
                              FontSize="12"
                              Margin="5"
                              ItemsSource="{Binding Races}"
                              SelectionChanged="EnemyRaceComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="90*"/>
                </Grid.RowDefinitions>
                <DockPanel Margin="10 0">
                    <CheckBox x:Name="ShowAdvancedCheckBox"
                              Margin="2"
                              VerticalContentAlignment="Center"
                              HorizontalAlignment="Center">
                        <CheckBox.LayoutTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </CheckBox.LayoutTransform>
                    </CheckBox>
                    <Label
                        DockPanel.Dock="Right"
                        Margin="5"
                        FontSize="16"
                        Style="{DynamicResource ResourceKey=LabelFontColor}"
                        Content="Show Advanced Options"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Stretch">
                    </Label>
                    <DockPanel.Background>
                        <SolidColorBrush Color="Black" Opacity="0.8"/>
                    </DockPanel.Background>
                </DockPanel>
                <Grid Margin="10" Grid.Row="1"
                      x:Name="AdvancedStatsGrid"
                      Visibility="{Binding IsChecked, Converter={StaticResource VisibilityConverter}}">
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity="0.5"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="80*"/>
                    </Grid.RowDefinitions>
                    <Label
                    Margin="5"
                    FontSize="24"
                    Style="{DynamicResource ResourceKey=LabelFontColor}"
                    Content="- Advanced Options - "
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Stretch">
                        <Label.Background>
                            <SolidColorBrush Color="Black" Opacity="0.8"/>
                        </Label.Background>
                    </Label>
                    <Grid Grid.Row="1" x:Name="InnerAdvancedGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="60*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Flipbook Path: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="EnemyFlipbookComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyFlipbookComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllFlipbookPaths}"
                              DisplayMemberPath="Value"/>
                        <DockPanel Grid.Row="1">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Texture Path: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="EnemyTextureComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyTextureComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllTexturePaths}"
                              DisplayMemberPath="Value"/>
                        <DockPanel Grid.Row="2">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="AI Path: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="EnemyAIComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyAIComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllAIPaths}"
                              DisplayMemberPath="Value"/>
                        <DockPanel Grid.Row="3">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Beast Lore ID: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="EnemyBeastLoreComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyBeastLoreComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllBeastLoreIDs}"/>
                        <DockPanel Grid.Row="4">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="First BP: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <TextBox Grid.Row="4" Grid.Column="1"
                             x:Name="EnemyFirstBPTextBox"
                             FontSize="18"
                             Margin="5 0"
                             VerticalAlignment="Center"
                             TextChanged="AnyTextBox_TextChanged"
                             Text="{Binding CurrentEnemy.FirstBP}"
                             Style="{DynamicResource ResourceKey=TextBoxStyle}">
                            <TextBox.Background>
                                <SolidColorBrush Color="Black" Opacity="0.65"/>
                            </TextBox.Background>
                        </TextBox>
                        <DockPanel Grid.Row="5">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Dead Type: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="5" Grid.Column="1"
                              x:Name="EnemyDeadTypeComboBox"
                              FontSize="12"
                              Margin="5"
                              ItemsSource="{Binding DeadTypes}"
                              SelectionChanged="EnemyDeadTypeComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Margin="10 0 10 10">
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity="0.5"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="70*"/>
                    </Grid.RowDefinitions>
                    <Label
                    Margin="5"
                    FontSize="24"
                    Style="{DynamicResource ResourceKey=LabelFontColor}"
                    Content="- Abilities - "
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Stretch">
                        <Label.Background>
                            <SolidColorBrush Color="Black" Opacity="0.8"/>
                        </Label.Background>
                    </Label>
                    <ScrollViewer Grid.Row="1" Margin="5">
                        <StackPanel x:Name="AbilitiesPanel"/>
                    </ScrollViewer>
                </Grid>
                <Grid Margin="10 0 10 10" Grid.Row="1"
                      x:Name="BattleEventsGrid"
                      Visibility="{Binding IsChecked, Converter={StaticResource VisibilityConverter}}">
                    <Grid.Background>
                        <SolidColorBrush Color="Black" Opacity="0.5"/>
                    </Grid.Background>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="70*"/>
                    </Grid.RowDefinitions>
                    <Label
                    Margin="5"
                    FontSize="24"
                    Style="{DynamicResource ResourceKey=LabelFontColor}"
                    Content="- Battle Events - "
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Stretch">
                        <Label.Background>
                            <SolidColorBrush Color="Black" Opacity="0.8"/>
                        </Label.Background>
                    </Label>
                    <Grid Grid.Row="1" x:Name="InnerEventsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="70*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Event 1: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="EnemyEvent1ComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyEvent1ComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllEvents}"/>
                        <DockPanel Grid.Row="1">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Event 2: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="EnemyEvent2ComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyEvent2ComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllEvents}"/>
                        <DockPanel Grid.Row="2">
                            <Label FontSize="18"
                               Style="{DynamicResource ResourceKey=LabelFontColor}"
                                   Padding="5 0"
                                   Content="Event 3: "
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                        </DockPanel>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="EnemyEvent3ComboBox"
                              FontSize="12"
                              Margin="5"
                              SelectionChanged="EnemyEvent3ComboBox_SelectionChanged"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Left"
                              ItemsSource="{Binding AllEvents}"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3" Margin="10 0 10 10">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="80*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <Label
                    Margin="5"
                    FontSize="24"
                    Style="{DynamicResource ResourceKey=LabelFontColor}"
                    Content="- Preview - "
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Stretch">
                    <Label.Background>
                        <SolidColorBrush Color="Black" Opacity="0.8"/>
                    </Label.Background>
                </Label>
                <Image x:Name="ImagePreview"
                       Margin="10"
                       Source="/preview.png"
                       Grid.Row="1"/>
                <Button x:Name="ChangeTextureButton"
                        Margin="10"
                        FontSize="20"
                        IsEnabled="False"
                        Grid.Row="2">
                    Change Texture
                </Button>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="4" Margin="10 0 10 10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="SaveEnemyButton"
                        Click="SaveEnemyButton_Click"
                        FontSize="30"
                        Margin="35 60">
                    Save Changes
                </Button>
                <Button x:Name="DiscardChangesButton"
                        Click="DiscardChangesButton_Click"
                        FontSize="30"
                        Grid.Row="1"
                        Margin="35 60">
                    Discard Changes
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
